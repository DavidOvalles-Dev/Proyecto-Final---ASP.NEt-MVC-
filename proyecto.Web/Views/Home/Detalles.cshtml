@model proyecto.Domain.Entities.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalles del Usuario</strong></h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><strong>Apellido: </strong>@Html.DisplayFor(m => m.Apellido)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                </ul>

                <div class="mx-2 mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary  mx-auto">Volver</a>
                </div>
            </div>
        </div>
