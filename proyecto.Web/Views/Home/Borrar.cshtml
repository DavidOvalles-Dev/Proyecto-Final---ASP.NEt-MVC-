@model proyecto.Domain.Entities.Cliente

@{
    ViewData["Title"] = "Borrar Cliente";
}
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Borrar Cliente</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="ConfirmarBorrar" method="post">
                    <input asp-for="Id" type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="Control-label"></label>
                        <input asp-for="Nombre" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="Apellido" class="Control-label"></label>
                        <input asp-for="Apellido" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="Control-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="Control-label"></label>
                        <input asp-for="Telefono" class="form-control" readonly />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger d-block mx-auto">
                            <i class="fa fa-user-times" aria-hidden="true"></i> Borrar Usuario
                        </button>
                    </div>
                </form>

                <div class="mx-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-auto">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
