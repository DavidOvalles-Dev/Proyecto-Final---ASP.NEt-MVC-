@model IEnumerable<proyecto.Domain.Entities.Cliente>

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center mt-4"> Cliente Proyecto Final</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>Acciones</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-controller="Home" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalles" asp-controller="Home" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Detalle</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-controller="Home" asp-route-id="@item.Id"> <i class="fa fa-trash" aria-hidden="true"></i> Borrar</a>


                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Register" asp-controller="Home" class="btn btn-secondary c!-block mx-auto">
                        <i class="fa fa-plus " aria-hidden="true"></i> Agregar Cliente
                    </a>
                </div>
            </div>
        </div>
